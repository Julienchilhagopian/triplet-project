<h1>Organisation details</h1>

<div>
  <div>
    <h2>Organisation name: {{user.username}}</h2>

    <h4>Type of organisation: {{user.categories}} </h4>

    <h4>Description: {{user.description}}</h4>

    <h4>Mail: {{user.mail}}</h4>

    {{#if user.phone}}
    <h4>Phone: {{user.phone}}</h4>
    {{/if}} 

    {{#if user.facebook}}
    <h4>Facebook: {{user.facebook}}</h4>
    {{/if}} 

    {{#if user.instagram}}
    <h4>Instagram: {{user.instagram}}</h4>
    {{/if}} 
    
    {{#if user.twitter}}
    <h4>Twitter: {{user.twitter}}</h4>
    {{/if}} 

    {{#if userEdit}}
    <a href="/edit-profile">Edit</a>
    {{/if}}

    <a href="{{user.website}}" target="_blank"> click here to see the Web page</a>
  </div>
</div>