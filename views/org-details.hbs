<div class="container-org-details">
  <h2>{{user.username}}</h2>
  <img src="#" alt="">
  <h4>Type of organisation: {{user.categories}}</h4>

  <div class="description-card">
    <h4>Description: </h4>
    <p>{{user.description}}</p>
  </div>

  <div class="additional-info">

    <h4>Mail: {{user.mail}}</h4>

    {{#if user.phone}}
    <h4>Phone: {{user.phone}}</h4>
    {{/if}}
    <div class="social-media">
      {{#if user.facebook}}
      <h4>Facebook: {{user.facebook}}</h4>
      {{/if}} {{#if user.instagram}}
      <h4>Instagram: {{user.instagram}}</h4>
      {{/if}} {{#if user.twitter}}
      <h4>Twitter: {{user.twitter}}</h4>
      {{/if}} {{#if userEdit}}
      <a href="/profile/edit">Edit</a>
      {{/if}}
      <div class="webpage-link">
        <a href="{{user.website}}" target="_blank">
          <button>Webpage</button>
        </a>
      </div>
    </div>
  </div>